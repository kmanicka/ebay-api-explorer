# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /shopping                               Application.shopping
GET     /trading                                Application.trading
GET     /settings                               Application.settings
GET     /about                                  Application.about

GET     /login                          		Application.login
GET     /logincallbackaccept              		Application.loginAcceptedCallback
GET     /logincallbackdecline              		Application.loginDeclinedCallback
POST    /logincomplete                          Application.loginComplete
GET     /logout                          		Application.logout

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
